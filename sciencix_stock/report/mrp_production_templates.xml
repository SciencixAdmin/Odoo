<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_mrporder_inherit_sciencix" inherit_id="mrp.report_mrporder">
        <xpath expr="//div[hasclass('page')]//div[hasclass('row')][3]" position="inside">
            <div class="col-xs-3">
                <strong>Revision:</strong><br/>
                <span t-field="o.revision"/>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('page')]//div[hasclass('row')][3]" position="after">
            <div class="row mt32 mb32">
                <div class="col-xs-12">
                    <strong>NOTES:</strong><br/>
                    <span t-field="o.notes"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
