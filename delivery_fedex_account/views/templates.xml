    <template id="fedex_bill_my_account_dialog" name="FEDEX Bill My Account Dialog">
        <div class="modal fade" role="dialog" aria-hidden="true" id="fedex_bill_my_account_service">
            <div class="modal-dialog">
                <form id="set_fedex_carrier_account" action="/shop/fedex_carrier_account/set" method="post">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                            <h4 class="modal-titled">FEDEX Bill My Account</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="service_type">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                        <input type="hidden" name="sale_order_id" t-att-value="order.id"/>
                                    </div>
                                    <div id="account_info">
                                        <label class="mt8">Enter your Carrier Account #</label>
                                        <div>
                                            <input type="text" class="form-control mr4" id="fedex_carrier_account" name="fedex_carrier_account" required="required" t-att-value="order.fedex_carrier_account"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary o_apply_fedex_bill_my_account">Apply</button>
                            <button type="button" data-dismiss="modal" class="btn">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </template>

    <template id="payment_delivery_inherit_website_sale_delivery" name="Delivery Costs" inherit_id="website_sale_delivery.payment_delivery">
        <xpath expr="//div[@id='delivery_method']" position="before">
            <t t-call="delivery_fedex_account.fedex_bill_my_account_dialog"/>
        </xpath>
        <xpath expr="//label[@t-field='delivery.name']" position="after">
            <t t-if="delivery.delivery_type == 'fedex' and delivery.fedex_bill_my_account">
                <span id="fedex_bill_my_account" class="ml4">
                    <t t-if="not order.fedex_carrier_account">
                        <a href="#" data-toggle="modal" data-target="#fedex_bill_my_account_service">
                            (Bill My Account)
                        </a>
                    </t>
                    <t t-if="order.fedex_carrier_account">
                        <a href="/shop/fedex_carrier_account/unset">
                            Using Account <strong><t t-esc="order.fedex_carrier_account"/></strong>
                            <i class="fa fa-trash-o"/>
                        </a>
                    </t>
                </span>
            </t>
        </xpath>
    </template>
</odoo>