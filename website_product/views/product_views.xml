<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="x_product_website_notes" model="ir.ui.view">
        <field name="name">product.template.website_notes</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='notes']/group[@name='description_internal']" position="after">
                <group name="description_website">
                    <group string="Description for Website">
                        <field name="website_notes" nolabel="1" placeholder="This note is for product page on website."/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
