<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <report
        id="print_product_label"
        string="Print Label"
        model="stock.picking"
        report_type="qweb-pdf"
        file="print_label.print_label"
        name="print_label.print_label"
        menu="False"
    />

    <template id="print_label">
        <t t-name="print_label.print_label">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="picking">
                    <t t-foreach="picking.move_lines" t-as="mline">
                        <div style="height:0.1in;"></div>
                            <div style="margin-top: 5.5in !important; margin-left: 6.5in; width:2in; height:1in;">
                                <t t-call="print_label.report_label">
                                    <t t-set="product" t-value="mline.product_id"/>
                                    <t t-if="mline.move_line_ids" t-set="lot" t-value="mline.move_line_ids[0].lot_id"/>
                                </t>
                            </div>
                        <footer style="page-break-after: always;"/>
                    </t>
                </t>
            </t>
    </t>

    </template>

    <template id="report_label">
        <div style="padding:0;">
            <table style="border-spacing:0;margin-bottom:0;" class="table">
                <thead>
                    <tr>
                        <td style="border: 2px solid black; font-size:8pt" colspan="3" class="col-xs-8 danger">
                            [<strong t-esc="product.oem"/>]
                            <strong t-field="product.name"/>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr style="border: 2px solid black;">
                        <td style="text-align: center; font-size:5pt" class="col-xs-5">
                            <img t-if="product.barcode and len(product.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', product.barcode, 450, 100)" style="width:100%;height:20%;"/>
                            <img t-elif="product.barcode and len(product.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', product.barcode, 450, 100)" style="width:100%;height:20%;"/>
                            <img t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.barcode, 400, 100)" style="width:100%;height:20%;"/>
                            <span t-field="product.barcode"/>
                        </td>
                        <td class="col-xs-1"/>
                        <td style="text-align: center; font-size:5pt" class="col-xs-5">
                            <t t-if="lot and lot.name">
                                <img t-if="len(lot.name) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', lot.name, 450, 100)" style="width:100%;height:20%;"/>
                                <img t-elif="len(lot.name) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', lot.name, 450, 100)" style="width:100%;height:20%;"/>
                                <img t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', lot.name, 400, 100)" style="width:100%;height:20%;"/>
                                <span t-field="lot.name"/>
                            </t>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

</data>
</odoo>
