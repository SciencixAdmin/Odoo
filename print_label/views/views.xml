<odoo>
  <data>
    
    <record model="ir.ui.view" id="x_stock_picking_type">
      <field name="name">view_picking_type_form_inherit_sciencix</field>
      <field name="model">stock.picking.type</field>
      <field name="inherit_id" ref="stock.view_picking_type_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='show_reserved']" position="after">
          <field name="print_label_bool"/>
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="x_stock_picking_print_label">
      <field name="name">view_picking_form_inherit_sciencix</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='extra']/group[1]/group[1]/field[@name='picking_type_code']" position="after">
          <field name="print_label_bool" invisible="1"/>
        </xpath>
        <xpath expr="//button[@name='action_toggle_is_locked']" position="after">
          <button name="%(print_product_label)d" attrs="{'invisible': [('print_label_bool', '!=', True)]}" string="Print Label" type="action"/>
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="x_product_template_oem">
      <field name="name">product_template_only_form_view_inherit_sciencix</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='default_code']" position="after">
          <field name="oem"/>
        </xpath>
      </field>
    </record>
    
  </data>
</odoo>
